# =====================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =====================================================

# CONFIGURACIÓN REMOTA (ACTIVA)
DATABASE_URL="mysql://usuario:password@host:puerto/database"

# Variables individuales para mayor flexibilidad
DB_HOST=tu-host-db
DB_USER=tu-usuario-db
DB_PASSWORD=tu-password-db
DB_NAME=tu-database-name
DB_PORT=3306

# =====================================================
# CONFIGURACIÓN DEL SERVIDOR
# =====================================================

# Puerto de la aplicación
PORT=8765

# Entorno
NODE_ENV=production

# =====================================================
# CONFIGURACIÓN DE BACKUP
# =====================================================

# Backup
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESS=true
BACKUP_ENCRYPT=false
BACKUP_ENCRYPTION_KEY=clave_encriptacion_backup_2024

# =====================================================
# CONFIGURACIÓN DE SEGURIDAD
# =====================================================

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# JWT
JWT_SECRET=tu_jwt_secret_super_seguro_cambiar_en_produccion
ENCRYPTION_KEY=tu_encryption_key_super_segura_cambiar_en_produccion

# Firebase Configuration
FIREBASE_PROJECT_ID=tu-proyecto-firebase
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@tu-proyecto.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nTU_CLAVE_PRIVADA_AQUI\n-----END PRIVATE KEY-----"

# =====================================================
# CONFIGURACIÓN DE CORS
# =====================================================

CORS_ORIGIN=https://tu-dominio.com

# =====================================================
# CONFIGURACIÓN DE EMAIL
# =====================================================

# Configuración de SendGrid (PRODUCCIÓN - PRINCIPAL)
SENDGRID_API_KEY=SG.tu_sendgrid_api_key_aqui
SENDGRID_FROM_EMAIL=noreply@tu-dominio.com
SENDGRID_FROM_NAME=TuEmpresa

# Configuración para Gmail (Desarrollo Local)
GMAIL_USER=tu-email@gmail.com
GMAIL_APP_PASSWORD=tu-app-password

# Configuración para SMTP (Producción - Fallback)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-app-password

# Configuración general de email
EMAIL_FROM=TuEmpresa <noreply@tu-dominio.com>
FRONTEND_URL=https://tu-dominio.com

# Forzar envío real de emails en desarrollo (opcional)
FORCE_EMAIL_SEND=false