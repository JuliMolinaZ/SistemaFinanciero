# =====================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =====================================================

# URL de la base de datos para Prisma
# Formato: mysql://usuario:password@host:puerto/nombre_base_datos
DATABASE_URL="mysql://usuario:password@localhost:3306/sistema_financiero"

# Configuración actual de la base de datos (mantener compatibilidad)
DB_HOST=localhost
DB_USER=usuario
DB_PASSWORD=password
DB_NAME=sistema_financiero

# =====================================================
# CONFIGURACIÓN DE SEGURIDAD
# =====================================================

# JWT - Cambiar en producción por una clave segura
JWT_SECRET=tu_jwt_secret_super_seguro_cambiar_en_produccion_2024
JWT_EXPIRES_IN=24h

# Encriptación - Cambiar en producción por una clave de 32 caracteres
ENCRYPTION_KEY=tu_clave_de_encriptacion_super_segura_32_caracteres_2024

# Backup
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESS=true
BACKUP_ENCRYPT=false
BACKUP_ENCRYPTION_KEY=clave_encriptacion_backup_2024

# =====================================================
# CONFIGURACIÓN DEL SERVIDOR
# =====================================================

PORT=5001
NODE_ENV=development

# =====================================================
# CONFIGURACIÓN DE FIREBASE (opcional)
# =====================================================

# FIREBASE_PROJECT_ID=tu_proyecto_firebase
# FIREBASE_PRIVATE_KEY=tu_clave_privada
# FIREBASE_CLIENT_EMAIL=tu_email_cliente

# =====================================================
# CONFIGURACIÓN DE RATE LIMITING
# =====================================================

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =====================================================
# CONFIGURACIÓN DE LOGGING
# =====================================================

LOG_LEVEL=info
LOG_FILE=./logs/app.log
