# =====================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =====================================================

# CONFIGURACIÓN REMOTA
DATABASE_URL="mysql://tu_usuario:tu_password@tu_host:3306/tu_base_datos"

# Variables individuales para mayor flexibilidad
DB_HOST=tu_host
DB_USER=tu_usuario
DB_PASSWORD=tu_password
DB_NAME=tu_base_datos
DB_PORT=3306

# =====================================================
# CONFIGURACIÓN DEL SERVIDOR
# =====================================================

# Puerto de la aplicación
PORT=8765

# =====================================================
# CONFIGURACIÓN DE SEGURIDAD
# =====================================================

# JWT Secret (cambiar en producción)
JWT_SECRET=tu_jwt_secret_super_seguro_cambiar_en_produccion

# =====================================================
# CONFIGURACIÓN DE EMAIL
# =====================================================

# SendGrid (RECOMENDADO para producción) - Soluciona problemas de SMTP bloqueado
SENDGRID_API_KEY=SG.tu-api-key-de-sendgrid-aqui
SENDGRID_FROM_EMAIL=noreply@runsolutions-services.com
SENDGRID_FROM_NAME=RunSolutions

# SMTP Gmail (fallback/desarrollo)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=it@runsolutions-services.com
SMTP_PASS=tu-app-password-de-gmail
GMAIL_USER=it@runsolutions-services.com
GMAIL_APP_PASSWORD=tu-app-password-de-gmail

# Email general
EMAIL_FROM=RunSolutions <noreply@runsolutions-services.com>

# =====================================================
# CONFIGURACIÓN DE FRONTEND
# =====================================================

FRONTEND_URL=http://localhost:2103

# =====================================================
# CONFIGURACIÓN DE FIREBASE
# =====================================================

# ID del proyecto de Firebase
FIREBASE_PROJECT_ID=authenticationrun

# Credenciales de servicio de Firebase (opcional)
# FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}
# FIREBASE_SERVICE_ACCOUNT_PATH=./path/to/service-account-key.json

# =====================================================
# CONFIGURACIÓN DE DESARROLLO
# =====================================================

NODE_ENV=development
DEBUG_MODE=true
